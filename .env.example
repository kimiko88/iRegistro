# Copy this to .env and configure with your actual values

# API Configuration
VITE_API_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgres://user:password@localhost:5432/registro?sslmode=disable

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRY=24h

# SPID Configuration
SPID_METADATA_URL=https://registry.spid.gov.it/metadata/idp/spid-entities-idps.xml
SPID_ENTITY_ID=https://api.your-domain.com/auth/spid/metadata
SPID_ACS_URL=https://api.your-domain.com/auth/spid/callback
SPID_CERTIFICATE_PATH=./certs/spid-cert.pem
SPID_PRIVATE_KEY_PATH=./certs/spid-key.pem

# CIE Configuration
CIE_ISSUER=https://idserver.servizicie.interno.gov.it/idp/profile/oidc
CIE_CLIENT_ID=your_cie_client_id_from_ministero
CIE_CLIENT_SECRET=your_cie_client_secret_from_ministero
CIE_REDIRECT_URI=https://api.your-domain.com/auth/cie/callback

# GDPR Encryption (32 bytes for AES-256)
ENCRYPTION_KEY=12345678901234567890123456789012

# Monitoring (optional)
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=admin

# Email (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Storage
STORAGE_PATH=./storage
TEMP_FILES_PATH=./storage/temp

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s

# Testing
TEST_DATABASE_URL=postgres://user:password@localhost:5432/registro_test?sslmode=disable
