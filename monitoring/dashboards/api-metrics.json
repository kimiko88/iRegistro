{
    "dashboard": {
        "title": "iRegistro - API Metrics",
        "uid": "iregistro-api-metrics",
        "tags": [
            "registro",
            "api"
        ],
        "timezone": "browser",
        "schemaVersion": 30,
        "version": 0,
        "refresh": "5s",
        "panels": [
            {
                "id": 1,
                "title": "Request Duration (P95)",
                "type": "graph",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
                        "legendFormat": "{{method}} {{path}}"
                    }
                ]
            },
            {
                "id": 2,
                "title": "Error Rate",
                "type": "graph",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                },
                "targets": [
                    {
                        "expr": "rate(http_request_errors_total[5m])",
                        "legendFormat": "{{method}} {{path}} {{status}}"
                    }
                ]
            },
            {
                "id": 3,
                "title": "Request Throughput",
                "type": "graph",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 8
                },
                "targets": [
                    {
                        "expr": "sum(rate(http_requests_total[1m])) by (method)",
                        "legendFormat": "{{method}}"
                    }
                ]
            },
            {
                "id": 4,
                "title": "Status Code Distribution",
                "type": "piechart",
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 8
                },
                "targets": [
                    {
                        "expr": "sum(http_requests_total) by (status)",
                        "legendFormat": "{{status}}"
                    }
                ]
            },
            {
                "id": 5,
                "title": "Active WebSocket Connections",
                "type": "graph",
                "gridPos": {
                    "h": 8,
                    "w": 24,
                    "x": 0,
                    "y": 16
                },
                "targets": [
                    {
                        "expr": "active_websocket_connections",
                        "legendFormat": "WS Connections"
                    }
                ]
            }
        ]
    }
}